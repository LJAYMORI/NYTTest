<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonguk.nyttest">

    <!--permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.application.NYTApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--story list activity-->
        <activity android:name=".screen.story_list.StoryListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--story activity-->
        <activity android:name=".screen.story.StoryActivity" />

        <!--story web activity-->
        <activity android:name=".screen.story_web.StoryWebActivity" />

    </application>

</manifest>